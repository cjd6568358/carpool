/* components/records/records.wxss */

.records {
  margin: 0 20rpx;
  font-size: 28rpx;
}

.record {
  background-color: #fff;
  border-radius: 8rpx;
  padding: 20rpx;
  display: flex;
}

.record + .record {
  margin-top: 20rpx;
}

.from-to {
  width: 100%;
  text-align: center;
  margin-bottom: 20rpx;
}

.detail {
  display: flex;
  flex-wrap: wrap;
  flex: 1;
}

.name, .free, .fee {
  flex: 1;
  text-align: center;
}

.remark {
  width: 100%;
  font-size: 26rpx;
  color: #a3a3a3;
  margin-top: 10rpx;
}

.action {
  margin-left: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.action .contact-btn {
  background-color: #04be02;
}

.action button+button {
  margin-top: 10rpx;
}

.empty {
  height: 160rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
