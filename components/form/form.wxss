/* components/form/form.wxss */

.form-area {
  background-color: #f5f5f5;
  font-size: 28rpx;
  line-height: 40rpx;
  padding: 20rpx;
}

.form-item {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  font-size: 32rpx;
}

.form-item:not(:first-child) {
  margin-top: 10rpx;
}

.form-item label {
  width: 160rpx;
  display: inline-block;
}

.form-item.title .options, .form-item.free .options {
  display: inline-flex;
}

.form-item.title .options view, .form-item.free .options view {
  display: block;
  padding: 5rpx 20rpx;
  text-align: center;
  border: 1rpx solid #dcdfe6;
  border-left: 0;
  min-width: 100rpx;
}

.form-item.title .options view:first-child,
.form-item.free .options view:first-child {
  border-top-left-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
  border-left: 1rpx solid #dcdfe6;
}

.form-item.title .options view:last-child,
.form-item.free .options view:last-child {
  border-top-right-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}

.form-item.title .options view.active, .form-item.free .options view.active {
  background-color: #409eff;
  border-color: #409eff;
  color: #fff;
}

.form-item.date .options, .form-item.fromCity .options,
.form-item.toCity .options {
  display: inline-flex;
}

.form-item .options .tips {
  font-size: 20rpx;
  color: #a3a3a3;
  margin-left: 20rpx;
}
