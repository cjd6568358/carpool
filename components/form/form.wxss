/* components/form/form.wxss */

.form-area {
  background-color: #f5f5f5;
  font-size: 28rpx;
  line-height: 40rpx;
  padding: 20rpx;
}

.form-item {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
}

.form-item .options {
  display: inline-flex;
  flex: 1;
}

.form-item:not(:first-child) {
  margin-top: 10rpx;
}

.form-item .label {
  width: 160rpx;
  display: inline-block;
}

.form-item.title .options .item, .form-item.free .options .item {
  display: block;
  padding: 5rpx 20rpx;
  text-align: center;
  border: 1rpx solid #dcdfe6;
  border-left: 0;
  min-width: 100rpx;
}

.form-item.title .options .item:first-child,
.form-item.free .options .item:first-child {
  border-top-left-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
  border-left: 1rpx solid #dcdfe6;
}

.form-item.title .options .item:last-child,
.form-item.free .options .item:last-child {
  border-top-right-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}

.form-item.title .options .item.active, .form-item.free .options .item.active {
  background-color: #04be02;
  border-color: #04be02;
  color: #fff;
}

.form-item.date .options, .form-item.fromCity .options,
.form-item.toCity .options {
  display: inline-flex;
}

.form-item .options .tips {
  font-size: 20rpx;
  color: #a3a3a3;
  margin-left: 20rpx;
}

.form-item .options .textarea {
  width: 100%;
  height: 100rpx;
}

.textarea-placeholder {
  font-size: 28rpx;
}

.form-buttons {
  margin-top: 20rpx;
  display: flex;
}

.form-buttons .btn {
  flex: 1;
}

.form-buttons .btn:first-child {
  margin-right: 30rpx;
}
