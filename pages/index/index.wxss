/**index.wxss**/

movable-area {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  position: fixed;
  right: 50rpx;
  top: 20rpx;
}

movable-view {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

movable-view button{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #04BE02;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  line-height: 30rpx;
  box-shadow: 0 0 16rpx 0 rgba(0, 0, 0, 0.4);
}
